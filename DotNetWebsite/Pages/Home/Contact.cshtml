@page "/contact"
@model DotNetWebsite.Pages.Home.ContactModel

@{
    ViewData["Title"] = "Contact";
}

@if (Request.Method == "POST" && ModelState.IsValid)
{
    <div style="background-color: green;">
        <p>The contact request was successfully sent</p>
    </div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.FirstName" class="control-label"></label>
        <input type="text" asp-for="@Model.FirstName" class="form-control" />
        <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName" class="control-label"></label>
        <input type="text" asp-for="@Model.LastName" class="form-control" />
        <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email" class="control-label"></label>
        <input type="email" asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Telephone" class="control-label"></label>
        <input type="tel" asp-for="@Model.Telephone" class="form-control" />
        <span asp-validation-for="@Model.Telephone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Address" class="control-label"></label>
        <input type="text" asp-for="@Model.Address" class="form-control" />
        <span asp-validation-for="@Model.Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Message" class="control-label"></label>
        <textarea asp-for="@Model.Message" class="form-control"></textarea>
        <span asp-validation-for="@Model.Message" class="text-danger"></span>
    </div>
    <div class="form-group" id="send-button">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>