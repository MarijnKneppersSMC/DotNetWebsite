@page "/movie"
@model DotNetWebsite.Pages.Movie.IndexModel

@{
    ViewData["Title"] = "Search movie";
    List<Models.Movie> filteredMovies = Model.FilteredMovies;
}

<form>
    <div class="form-group search-form">
        <input type="text" placeholder="Search movie" asp-for="@Model.SearchString" class="form-control" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <span asp-validation-for="@Model.SearchString" class="text-danger"></span>
    </div>
</form>

@for (int i = 0; i < filteredMovies.Count; i++)
{
    <div class="nav-item">
        <a class="nav-link" target="_blank" asp-page="/Movie/Movie" asp-route-id="@filteredMovies[i].Id">@filteredMovies[i].Title (@filteredMovies[i].Year)</a>
    </div>
}